@model SoccerManageApp.Models.Admin.EditRoleModel

<form asp-action="EditRole" asp-route-roleId="@ViewBag.roleId" method="POST">
    <div class="form-group">
       <div class="card">
           <div class="card-header">
                 Role ID:<input type="text" readonly asp-for="@Model.RoleId"/>
           </div>
           <div class="card-body">
                 Role Name:<input type="text" asp-for="@Model.RoleName"/>
           </div>
           <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="#" class="btn btn-primary">Cancel</a>
       </div>
    </div>
    <h3> Users in role @Model.RoleName</h3>
    @if(Model.Users.Any())
    {
        foreach (var user in Model.Users)
        {
            <h5>@user</h5>
        }
        <a asp-action="EditUserInRole" asp-route-roleId=@Model.RoleId class="btn btn-primary">Add Or Remove User</a>
    }
    else
    {
        <h5>No user in role</h5>
        <a asp-action="EditUserInRole" asp-route-roleId="@Model.RoleId" class="btn btn-primary">Add Roles</a>
    }
</form>

